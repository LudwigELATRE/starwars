{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    {% for personnage in personnages %}
        <article>
            <a href="{{ path('app_personnage', { 'id': personnage.url|replace({
                'https://swapi.dev/api/people/': '',
                '/': ''
            }) }) }}">
                {{ personnage.name }}
            </a>
        </article>
    {% endfor %}
    {% if nextUrl.previous is not null %}
        <button>
            <a class="contrast" href="{{ path('app_next_personnages', {'page': nextUrl.previous|replace({'https://swapi.dev/api/people/?page=': ''}) }) }}">Precedent</a>
        </button>
    {% endif %}
    {% if nextUrl.next is not null %}
    <button>
        <a class="contrast" href="{{ path('app_next_personnages', {'page': nextUrl.next|replace({'https://swapi.dev/api/people/?page=': ''}) }) }}">Suivant</a>
    </button>
    {% endif %}
{% endblock %}
